<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_loginpage"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="#003366"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="18dp">

            <ImageView
                android:id="@+id/logo_loginpage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/title_loginpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrar no Hurb"
                android:fontFamily="@font/cabin"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#003366"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_loginpage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/img"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:textColorHint="#808080"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:padding="6dp"
        app:boxStrokeColor="#003366"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="2dp"
        app:cursorColor="#003366"
        app:hintTextColor="#003366">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/font_cabin"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="8dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        app:endIconMode="password_toggle"
        android:textColorHint="#808080"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:padding="6dp"
        app:boxStrokeColor="#003366"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="2dp"
        app:cursorColor="#003366"
        app:hintTextColor="#003366">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="@font/font_cabin"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="8dp"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/esqueceu_senha_loginpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esqueceu a senha?"
        android:fontFamily="@font/cabin"
        android:clickable="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#D81B60"
        android:gravity="center"
        android:layout_marginTop="18dp"
        />

    <Button
        android:id="@+id/button_entrar_loginpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar com a conta Hurb"
        android:textAllCaps="false"
        android:fontFamily="@font/cabin"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="#D81B60"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="18dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/possui_conta_loginpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não possui uma conta?"
            android:textStyle="bold"
            android:fontFamily="@font/cabin"
            android:textSize="18sp"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/cadastrar_loginpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Criar uma Conta"
            android:clickable="true"
            android:textStyle="bold"
            android:fontFamily="@font/cabin"
            android:textSize="18sp"
            android:textColor="#D81B60"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        >
        
        <View
            android:layout_width="86dp"
            android:layout_height="2dp"
            android:background="#C0C0C0"/>

        <TextView
            android:id="@+id/ou_loginpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entre também com:"
            android:fontFamily="@font/cabin"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#808080"
            android:padding="6dp"
            />

        <View
            android:layout_width="86dp"
            android:layout_height="2dp"
            android:background="#C0C0C0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        >
        
    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_background"
        android:src="@drawable/facebook_logo"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginEnd="64dp"
        />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_background"
        android:src="@drawable/google_logo"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        />

    </LinearLayout>

</LinearLayout>